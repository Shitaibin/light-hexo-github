#header
  text-shadow 0 0 1px #eee
  margin 50px auto
  background header-background

  a
    color #111
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em // blog's title
    line-height 1

  h2
    font-weight normal
    font-size 1.2em // blog's description
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    font-size 1.2em // 文章列表那个几个字的大小
    ul
      list-style none
      li
        float left
        margin-left 30px